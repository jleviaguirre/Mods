{
    "apiVersion": "1.3",
    "version": "2.0",
    "name": "Blues Chart",
    "id": "js-barcode-chart",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "myProperty",
            "type": "string",
            "defaultValue": "myValue"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "preferredDualMode": "continuous",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Columns by",
                "mode": "categorical",
                "placement": "top", 
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis",
                }
            },
            {
                "name": "Rows by",
                "mode": "categorical",
                "placement": "right", 
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis",
                }
            },
            {
                "name": "Height by",
                "mode": "continuous",
                
                "placement": "left"
            },
            {
                "name": "Width by",
                "mode": "continuous",
                "placement": "bottom" 
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "main.js"
    ]
}